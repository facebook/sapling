{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Sapling VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}/vscode"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/vscode/dist/**/*.js"]
    }
  ]
}
