    name = "mpatch",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    deps = [
        "fbsource//third-party/rust:libc",
        "//eden/scm/lib/mpatch-sys:mpatch-sys",
    ],
)
