    name = "nonblocking",
    srcs = glob(["src/**/*.rs"]),
    autocargo = {"cargo_toml_config": {"package": {"license": "MIT"}}},
    crate_root = "src/lib.rs",
    test_deps = [
        "fbsource//third-party/rust:futures",
    ],
)
