load("@fbcode_macros//build_defs:native_rules.bzl", "buck_filegroup", "buck_genrule", "buck_sh_binary")
load("@fbsource//tools/build_defs:glob_defs.bzl", "glob")

oncall("mononoke")

buck_sh_binary(
    name = "config_gen.sh",
    main = "config_gen.sh",
)

buck_filegroup(
    name = "raw_config",
    srcs = glob([
        "src/**/*",
    ]),
)

buck_genrule(
    name = "config",
    out = "config",
    cmd = '"$(exe :config_gen.sh)" "$(location :raw_config)" "$OUT"',
)
