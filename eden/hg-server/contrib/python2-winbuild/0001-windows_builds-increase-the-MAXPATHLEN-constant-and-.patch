+++ b/Include/osdefs.h
@@ -23,6 +23,11 @@ extern "C" {
 #endif
 #endif
 
+/* Facebook-specific: our Python on Windows understands long paths */
+#if defined(MS_WINDOWS)
+#define MAXPATHLEN 1024
+#endif
+
